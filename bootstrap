set -e

# Helpful functions
log_msg() {
    echo "bootstrap: $1"
}

log_error() {
    echo "bootstrap error: $1" >&2
}

show_help() {
    cat << EOF
Usage: $0 [OPTION]

Options:
  --clean    Clean all generated files before bootstrap
  --help     Display this help and exit
EOF
}

# Check for required tools
check_required_tools() {
    local tools="autoconf automake make gcc pkg-config"
    
    for tool in $tools; do
        if ! command -v "$tool" >/dev/null 2>&1; then
            log_error "$tool not found"
            log_error "Please install $tool before continuing"
            exit 1
        fi
    done
}

# Clean up old files
clean_old_files() {
    log_msg "Cleaning up old build files..."
    rm -rf \
       aclocal.m4 \
       autom4te.cache \
       build-aux \
       config.h \
       config.h.in \
       config.h.in~ \
       config.log \
       config.status \
       configure \
       .deps \
       .libs \
       m4 \
       Makefile \
       Makefile.in \
       src/Makefile \
       src/Makefile.in \
       lib/Makefile \
       lib/Makefile.in \
       stamp-h1 \
       *~
}

# Create necessary directories
create_directories() {
    log_msg "Creating build directories..."
    mkdir -p build-aux m4
}

# Run autotools commands
run_autotools() {
    log_msg "Running autotools..."
    
    aclocal -I m4 || {
        log_error "aclocal failed"
        exit 1
    }
    
    autoheader || {
        log_error "autoheader failed"
        exit 1
    }
    
    automake --add-missing --copy || {
        log_error "automake failed"
        exit 1
    }
    
    autoconf || {
        log_error "autoconf failed"
        exit 1
    }
}

# Parse arguments and run
case "$1" in
    --clean)
        clean_old_files
        check_required_tools
        create_directories
        run_autotools
        ;;
    --help)
        show_help
        exit 0
        ;;
    "")
        check_required_tools
        create_directories
        run_autotools
        ;;
    *)
        log_error "Unknown option: $1"
        show_help
        exit 1
        ;;
esac

log_msg "Bootstrap complete. You can now run:"
log_msg "./configure"
log_msg "make"
